
generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}


enum Role {
  ADMIN
  RECRUITER
  CANDIDATE
}

enum JobStatus {
  OPEN
  CLOSED
}

enum JobType {
  FULL_TIME
  PART_TIME
  CONTRACT
  INTERNSHIP
}

enum ApplicationStatus {
  APPLIED
  INTERVIEW
  OFFER
  HIRED
  REJECTED
}

enum RecruiterStatus {
  ACTIVE
  INACTIVE
}


model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String   
  role      Role
  failedLoginAttempts Int      @default(0)
  lockUntil           DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  admin     Admin?
  recruiter Recruiter?
  candidate Candidate?

  @@index([email])
  @@index([role])
  @@map("users")
}


model Admin {
  id     String @id @default(uuid())
  userId String @unique
  name   String
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("admins")
}


model Recruiter {
  id         String          @id @default(uuid())
  userId     String          @unique
  name       String
  department String
  status     RecruiterStatus @default(ACTIVE)
  createdAt  DateTime        @default(now())
  updatedAt  DateTime        @updatedAt

  user              User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  jobAssignments    JobAssignment[]    // Many-to-many with jobs
  
  @@index([department])
  @@index([status])
  @@map("recruiters")
}

model Candidate {
  id          String   @id @default(uuid())
  userId      String   @unique
  name        String
  phone       String
  resumeUrl   String?  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  applications Application[] 

  @@index([phone])
  @@map("candidates")
}


model Job {
  id         String    @id @default(uuid())
  title      String
  department String
  location   String
  type       JobType
  status     JobStatus @default(OPEN)
  postedDate DateTime  @default(now())
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  jobAssignments JobAssignment[] 
  applications   Application[]   

  @@index([status])
  @@index([department])
  @@index([postedDate])
  @@map("jobs")
}

model JobAssignment {
  id          String   @id @default(uuid())
  jobId       String
  recruiterId String
  assignedAt  DateTime @default(now())

  job       Job       @relation(fields: [jobId], references: [id], onDelete: Cascade)
  recruiter Recruiter @relation(fields: [recruiterId], references: [id], onDelete: Cascade)

  @@unique([jobId, recruiterId]) // Prevent duplicate assignments
  @@index([jobId])
  @@index([recruiterId])
  @@map("job_assignments")
}


model Application {
  id          String            @id @default(uuid())
  candidateId String
  jobId       String
  status      ApplicationStatus @default(APPLIED)
  appliedDate DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  candidate Candidate @relation(fields: [candidateId], references: [id], onDelete: Cascade)
  job       Job       @relation(fields: [jobId], references: [id], onDelete: Cascade)

  @@unique([candidateId, jobId]) 
  @@index([candidateId])
  @@index([jobId])
  @@index([status])
  @@index([appliedDate])
  @@map("applications")
}
model AuditLog {
  id              String   @id @default(uuid())
  actionType      String
  entityType      String
  entityId        String
  entityName      String
  performedBy     String
  performedByName String
  performedByRole String
  timestamp       DateTime @default(now())
  details         String?

  @@index([timestamp])
  @@index([entityType])
  @@index([actionType])
  @@index([performedBy])
  @@map("audit_logs")
}